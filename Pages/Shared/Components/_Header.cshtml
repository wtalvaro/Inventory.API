@using System.Security.Claims
@{
    var userRole = User.FindFirst(ClaimTypes.Role)?.Value ?? "Vendedor";
    var userName = User.Identity?.Name ?? "Usuário";
}

<header class="bg-blue-800 text-white p-4 shadow-lg flex justify-between items-center">
    <div class="flex items-center gap-3">
        <i class="fas fa-rocket text-blue-300"></i>
        <span class="font-bold text-xl tracking-tight">Retail<span class="text-blue-200">Pro</span></span>
    </div>

    <div id="session-clock"
        class="bg-blue-900 px-4 py-1.5 rounded-lg border border-blue-700 shadow-inner font-mono text-sm text-blue-100 flex items-center gap-2">
        <i class="fas fa-history text-xs text-blue-400"></i>
        <span id="session-timer-display" class="font-bold">00:00:00</span>
    </div>

    <div class="flex items-center gap-4">
        <div class="text-right hidden sm:block">
            <p class="text-xs text-blue-200 font-medium leading-tight">Olá, @userName</p>
            <span
                class="inline-block bg-blue-600 px-2 py-0.5 rounded text-[10px] font-black uppercase tracking-widest mt-1">
                @userRole
            </span>
        </div>

        <div class="h-8 w-px bg-blue-700"></div>

        <button onclick="logout()"
            class="flex items-center gap-2 text-sm font-medium text-blue-200 hover:text-white transition-colors group">
            <span class="hidden md:inline">Sair</span>
            <i class="fas fa-sign-out-alt group-hover:translate-x-1 transition-transform"></i>
        </button>
    </div>
</header>