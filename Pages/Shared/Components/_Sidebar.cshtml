@using System.Security.Claims
@{
    var userRole = User.FindFirst(ClaimTypes.Role)?.Value ?? "";
}

<nav class="w-64 bg-white shadow-md flex flex-col p-4 gap-2 border-r border-gray-100">
    <div class="mb-4 px-3">
        <p class="text-[10px] font-black text-gray-400 uppercase tracking-[0.2em]">Menu Principal</p>
    </div>

    <button onclick="showSection('inventory')"
        class="nav-link p-3 text-left hover:bg-blue-50 text-gray-700 rounded-xl flex items-center gap-3 transition-all group active:scale-95">
        <div
            class="w-8 h-8 rounded-lg bg-blue-100 flex items-center justify-center group-hover:bg-blue-600 transition-colors">
            <i class="fas fa-boxes text-blue-600 group-hover:text-white"></i>
        </div>
        <span class="font-semibold text-sm">Inventário</span>
    </button>

    <button onclick="showSection('coach')"
        class="nav-link p-3 text-left hover:bg-purple-50 text-gray-700 rounded-xl flex items-center gap-3 transition-all group active:scale-95">
        <div
            class="w-8 h-8 rounded-lg bg-purple-100 flex items-center justify-center group-hover:bg-purple-600 transition-colors">
            <i class="fas fa-magic text-purple-600 group-hover:text-white"></i>
        </div>
        <span class="font-semibold text-sm">Coach de Vendas</span>
    </button>

    @if (userRole == "Coordenador")
    {
        <div class="my-4 border-t border-gray-100"></div>

        <div class="mb-4 px-3">
            <p class="text-[10px] font-black text-gray-400 uppercase tracking-[0.2em]">Administração</p>
        </div>

        <button onclick="showSection('telemetry')"
            class="nav-link p-3 text-left hover:bg-green-50 text-gray-700 rounded-xl flex items-center gap-3 transition-all group active:scale-95">
            <div
                class="w-8 h-8 rounded-lg bg-green-100 flex items-center justify-center group-hover:bg-green-600 transition-colors">
                <i class="fas fa-chart-line text-green-600 group-hover:text-white"></i>
            </div>
            <span class="font-semibold text-sm">Telemetria Rede</span>
        </button>
    }

    <div class="flex-1"></div>

    <div class="p-4 bg-gray-50 rounded-2xl mt-auto">
        <p class="text-[10px] text-gray-500 text-center font-medium">RetailPro v1.0.4</p>
    </div>
</nav>

<style>
    /* Estilo para destacar o botão ativo se desejar via JS */
    .nav-link.active {
        background-color: #eff6ff;
        color: #1e40af;
    }
</style>