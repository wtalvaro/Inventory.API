@page
@model Inventory.API.Pages.IndexModel
@using Microsoft.AspNetCore.Authentication
@functions {
    public double GetRemainingSeconds()
    {
        var identity = User?.Identity;
        if (identity == null || !identity.IsAuthenticated) return 0;

        var authTask = HttpContext.AuthenticateAsync();
        var authProps = authTask.GetAwaiter().GetResult()?.Properties;
        var expiresUtc = authProps?.ExpiresUtc;

        if (expiresUtc.HasValue)
        {
            var remaining = expiresUtc.Value - DateTimeOffset.UtcNow;
            return Math.Max(0, remaining.TotalSeconds);
        }
        return 7200;
    }
}
@{
    Layout = "_Layout";
    ViewData["Title"] = "RetailPro - Dashboard";
    var isAuthenticated = User.Identity?.IsAuthenticated ?? false;
    var userRole = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "";
}

@* 1. Overlay de Carregamento Global - Adicione 'hidden' por padrão *@
<div id="loading-overlay" class="fixed inset-0 bg-white z-[9999] flex items-center justify-center hidden">
    <i class="fas fa-spinner fa-spin text-3xl text-blue-600"></i>
</div>

@if (!isAuthenticated)
{
    @* Tela de Login (Pode ser modularizada depois se crescer muito) *@
    <div id="auth-screen" class="min-h-screen flex items-center justify-center bg-gray-100">
        <div class="bg-white p-8 rounded-xl shadow-lg w-96 border border-gray-200 text-center">
            <h1 class="text-2xl font-bold text-blue-800 mb-6 italic">RETAIL<span class="text-gray-800">PRO</span></h1>
            <form method="post" asp-page-handler="Login">
                <div class="mb-4 text-left">
                    <label class="text-[10px] font-black text-gray-400 uppercase">Usuário</label>
                    <input type="text" name="username" required
                        class="w-full p-2 border rounded mt-1 outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div class="mb-6 text-left">
                    <label class="text-[10px] font-black text-gray-400 uppercase">Senha</label>
                    <input type="password" name="password" required
                        class="w-full p-2 border rounded mt-1 outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <button type="submit"
                    class="w-full bg-blue-600 text-white py-2 rounded-lg font-bold hover:bg-blue-700 transition-all active:scale-95">
                    Entrar
                </button>
            </form>
        </div>
    </div>
}
else
{
    <div id="main-app" class="min-h-screen flex flex-col">
        @* 2. Header Component *@
        @await Html.PartialAsync("Components/_Header")

        <div class="flex flex-1 overflow-hidden">
            @* 3. Sidebar Navigation *@
            @await Html.PartialAsync("Components/_Sidebar")

            @* 4. Main Content Area (SPA Sections) *@
            <main class="flex-1 p-6 overflow-y-auto bg-gray-50">

                @* Seção de Inventário *@
                @await Html.PartialAsync("Components/_InventorySection")

                @* Seção do Coach de Vendas *@
                @await Html.PartialAsync("Components/_SalesCoachSection")

                @* Seção de Telemetria (Restrita via Role dentro da Partial) *@
                @await Html.PartialAsync("Components/_TelemetrySection")

            </main>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Forçamos a conversão correta para tipos nativos do JS
        const ServerState = {
            isAuthenticated: @(isAuthenticated.ToString().ToLower()), // Garante 'true' ou 'false' minúsculo
            role: "@userRole",
            storeId: parseInt("@(User.FindFirst("StoreId")?.Value ?? "0")"),
            sessionDurationSeconds: @Math.Floor(GetRemainingSeconds()),
            alertAtSeconds: 600
        };
        console.log("RetailPro: ServerState detectado", ServerState);
    </script>

    <script type="module" src="~/js/app.js" asp-append-version="true"></script>
}